<!doctype html>
<html lang="en-us">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin: login</title>
    <link rel="stylesheet" href="css/login.css">
    
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>

<body>
        <div id="login" class="form" data-aos="zoom-in-up" data-aos-duration="12000">
            <h2>Admin Login</h2>
    
            <form action="/admin/" method="POST">
                <% if(msg) { %>
                    <h3 style="color: #17b978;" class="text-center"><%=msg%></h3><br>
                <%   } %>
                <% if(err) { %>
                  <h3 style="color: #ff304f;" class="text-center"><%=err%></h3><br>
                <%   } %>
                <div class="input">
                    <div class="inputBox">
                        <label>Username</label>
                        <input type="text" name="name" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="inputBox">
                        <label>Password</label>
                        <input type="password" name="pass" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="inputBox">
                        <input type="submit" value="Login" class="btn btn-info btn-lg">
                    </div>
                </div>
            </form>
                <p class="forget">Don't have an account? <a href="/createAccount">Sign Up</a></p>
                <p class="forget"><a href="/login">User Login</a></p>
        </div>

        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script>
        AOS.init();
        </script>
</body>

</html>